{% extends 'base.twig' %}
{% block content %}

{% include 'components/hero-banner.twig' %}

<div class="section pt-50 pb-50">
	<div class="container flex flex-wrap">
		<!-- Main content -->
		<div class="w-2/3 pr-50 md:w-full md:pr-0">
			<div class="wysiwyg mb-30">
				{{ post.introduction|wpautop }}
			</div>
			{% for item in post.get_field('locations') %}
			<div class="flex flex-wrap relative location-windows mb-100 md:mb-50">
				<div class="anchor" id="{{ item.anchor }}"></div>
				<div class="w-5/12 md:w-8/12">
					<p class="h4 blue mb-10">{{ item.title }}</p>
					{% if item.toll_free %}
					<p>Toll Free</p>
					<a href="tel:{{ item.toll_free }}" class="bold">{{ item.toll_free }}</a>
					{% endif %}
					{% if item.trading_desk %}
					<p class="mt-20">Trading Desk:</p>
					<a href="tel:{{ item.trading_desk }}" class="bold">{{ item.trading_desk }}</a>
					{% endif %}
					<p class="mt-20">{{ item.address|wpautop }}</p>
					<p></p>
				</div>
				<div class="w-1/2 sm:text-center md:w-4/12">
					<img class="location-image circle larger z-2 relative" alt="{{ item.title }}" src="{{ item.image.url }}')">
				</div>
			</div>
			{% endfor %}
		</div>

		<!-- Sidebar -->
		<div class="w-1/3 md:w-full">
			<div class="wysiwyg mb-30">
				{{ post.sidebar_content|wpautop }}
			</div>
			{% include 'components/sidebar-links.twig' %}
		</div>
	</div>
</div>

<div class="section pb-100 md:pt-0 md:pb-50">
	<div class="container">
		<div class="anchor" id="form"></div>
		<p class="text-large bold mb-50">Please contact me</p>
		<div class="form-wrap contact-form">
		{% filter shortcodes %}
		[gravityform id=2 title=false description=false ajax=true tabindex=49]
		{% endfilter %}
		</div>
	</div>
</div>

{% endblock %}
